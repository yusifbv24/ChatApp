@inject IConfiguration Configuration
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="api-base" content="@Configuration["ApiBaseAddress"]" />
    <title>@ViewData["Title"] - ChatApp</title>
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" />
    <link rel="icon" type="image/png" href="~/favicon.png" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Outlined" rel="stylesheet" />
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- App CSS -->
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main-layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/profile-panel.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/messages.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/organization-hierarchy.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="main-layout" id="mainLayout">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <nav class="sidebar-nav">
                <!-- Toggle + Brand -->
                <div class="sidebar-header-row">
                    <button class="nav-item sidebar-toggle-btn" id="sidebarToggle" title="Expand">
                        <span class="material-icons">menu</span>
                    </button>
                    <a href="/" class="nav-brand" style="display:none;" id="sidebarBrand">ChatApp</a>
                </div>
                <div class="nav-divider"></div>

                <a href="/" class="nav-item" id="navFeed" title="Feed">
                    <span class="material-icons">dynamic_feed</span>
                    <span class="nav-label" style="display:none;">Feed</span>
                </a>
                <a href="/messages" class="nav-item" id="navMessages" title="Messages">
                    <span class="position-relative">
                        <span class="material-icons">chat</span>
                        <span class="notification-badge" id="msgUnreadBadge" style="display:none;">0</span>
                    </span>
                    <span class="nav-label" style="display:none;">Messages</span>
                </a>
                <button class="nav-item" id="navProfile" title="Profile">
                    <span class="material-icons">person</span>
                    <span class="nav-label" style="display:none;">Profile</span>
                </button>
                <a href="/settings" class="nav-item" id="navSettings" title="Settings">
                    <span class="material-icons">settings</span>
                    <span class="nav-label" style="display:none;">Settings</span>
                </a>

                <!-- Admin Section (hidden by default) -->
                <div id="adminNavSection" style="display:none;">
                    <div class="nav-divider"></div>
                    <a href="/admin/organizationhierarchy" class="nav-item" id="navOrganization" title="Organization">
                        <span class="material-icons">account_tree</span>
                        <span class="nav-label" style="display:none;">Organization</span>
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content Area -->
        <div class="main-content">
            <!-- Top Header -->
            <header class="top-header">
                <div class="header-left"></div>
                <div class="header-right">
                    <!-- Notification Button -->
                    <div class="notification-wrapper">
                        <button class="header-icon-btn" id="notificationBtn">
                            <span class="material-icons">notifications</span>
                            <span class="notification-badge" id="notifBadge" style="display:none;">0</span>
                        </button>
                        <div class="notification-panel" id="notificationPanel" style="display:none;">
                            <div class="notification-panel-header">
                                <span class="notification-panel-title">Notifications</span>
                                <button class="notification-panel-action" id="closeNotifPanel">
                                    <span class="material-icons" style="font-size:18px;">close</span>
                                </button>
                            </div>
                            <div class="notification-panel-body">
                                <div class="notification-empty">
                                    <span class="material-icons-outlined" style="font-size:48px; color:rgba(0,0,0,0.15);">notifications_none</span>
                                    <span>No new notifications</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Clock -->
                    <div class="header-clock" id="headerClock"></div>

                    <!-- User Menu -->
                    <div class="user-menu-wrapper">
                        <button class="user-menu-trigger" id="userMenuTrigger">
                            <div class="user-menu-avatar-placeholder" id="headerAvatar"></div>
                            <span class="material-icons" style="font-size:18px;">keyboard_arrow_down</span>
                        </button>
                        <div class="user-menu-dropdown" id="userMenuDropdown" style="display:none;">
                            <div class="user-menu-header">
                                <div class="user-menu-avatar-lg" id="menuAvatarLg"></div>
                                <div class="user-menu-info">
                                    <div class="user-menu-name" id="menuUserName"></div>
                                    <div class="user-menu-email" id="menuUserEmail"></div>
                                </div>
                            </div>
                            <div class="user-menu-body">
                                <button class="user-menu-item" id="menuProfileBtn">
                                    <div class="user-menu-item-icon">
                                        <span class="material-icons-outlined" style="font-size:18px;">person</span>
                                    </div>
                                    <span>Profile</span>
                                    <span class="material-icons user-menu-item-arrow" style="font-size:18px;">chevron_right</span>
                                </button>
                                <a href="/settings" class="user-menu-item" id="menuSettingsBtn">
                                    <div class="user-menu-item-icon">
                                        <span class="material-icons-outlined" style="font-size:18px;">settings</span>
                                    </div>
                                    <span>Settings</span>
                                    <span class="material-icons user-menu-item-arrow" style="font-size:18px;">chevron_right</span>
                                </a>
                            </div>
                            <div class="user-menu-footer">
                                <button class="user-menu-item user-menu-logout" id="logoutBtn">
                                    <div class="user-menu-item-icon logout-icon">
                                        <span class="material-icons-outlined" style="font-size:18px;">logout</span>
                                    </div>
                                    <span>Logout</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Network Status Banner -->
            <div class="network-banner" id="networkBanner" style="display:none;" role="alert" aria-live="assertive">
                <span class="material-icons network-banner-icon" id="networkBannerIcon"></span>
                <span id="networkBannerText"></span>
            </div>

            <!-- Page Content -->
            <main class="page-content">
                @RenderBody()
            </main>
        </div>

        <!-- Profile Panel Overlay -->
        <div class="profile-panel-overlay" id="profilePanelOverlay" style="display:none;">
            <div class="profile-panel-container" id="profilePanelContainer">
                <!-- Profile panel content will be loaded dynamically by profile-panel.js -->
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SignalR -->
    <script src="~/lib/signalr/signalr.min.js"></script>
    <!-- Core JS -->
    <script src="~/js/core/utils.js" asp-append-version="true"></script>
    <script src="~/js/core/api-client.js" asp-append-version="true"></script>
    <script src="~/js/core/app-state.js" asp-append-version="true"></script>
    <script src="~/js/core/auth.js" asp-append-version="true"></script>
    <script src="~/js/core/signalr-service.js" asp-append-version="true"></script>
    <!-- Components -->
    <script src="~/js/components/profile-panel.js" asp-append-version="true"></script>
    <!-- Layout init -->
    <script src="~/js/core/layout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>