@{
    ViewData["Title"] = "Organization";
}

<div class="admin-page" id="orgPage">
    <!-- Header -->
    <div class="admin-page-header">
        <h1 class="admin-page-title">Organization Hierarchy</h1>
        <div class="admin-page-actions">
            <button class="btn btn-sm btn-outline-secondary" id="expandAllBtn">
                <span class="material-icons" style="font-size:16px;">unfold_more</span> Expand All
            </button>
            <button class="btn btn-sm btn-outline-secondary" id="collapseAllBtn">
                <span class="material-icons" style="font-size:16px;">unfold_less</span> Collapse All
            </button>
        </div>
    </div>

    <!-- Statistics -->
    <div class="org-statistics" id="orgStatistics">
        <div class="stat-card">
            <div class="stat-icon" style="background:linear-gradient(135deg,#667eea,#764ba2);">
                <span class="material-icons">apartment</span>
            </div>
            <div class="stat-info"><div class="stat-value" id="statDepartments">0</div><div class="stat-label">Departments</div></div>
        </div>
        <div class="stat-card">
            <div class="stat-icon" style="background:linear-gradient(135deg,#f093fb,#f5576c);">
                <span class="material-icons">people</span>
            </div>
            <div class="stat-info"><div class="stat-value" id="statUsers">0</div><div class="stat-label">Users</div></div>
        </div>
        <div class="stat-card">
            <div class="stat-icon" style="background:linear-gradient(135deg,#4facfe,#00f2fe);">
                <span class="material-icons">work</span>
            </div>
            <div class="stat-info"><div class="stat-value" id="statPositions">0</div><div class="stat-label">Positions</div></div>
        </div>
        <div class="stat-card">
            <div class="stat-icon" style="background:linear-gradient(135deg,#43e97b,#38f9d7);">
                <span class="material-icons">circle</span>
            </div>
            <div class="stat-info"><div class="stat-value" id="statOnline">0</div><div class="stat-label">Online</div></div>
        </div>
    </div>

    <!-- Search -->
    <div class="org-search-bar">
        <span class="material-icons" style="color:rgba(0,0,0,0.3);">search</span>
        <input type="text" id="orgSearchInput" class="form-control form-control-sm" placeholder="Search users, departments..." />
    </div>

    <!-- Tree container -->
    <div class="org-tree-container" id="orgTree">
        <div class="text-center py-4"><div class="spinner-border spinner-border-sm text-secondary"></div></div>
    </div>
</div>

<!-- Create User Modal -->
<div class="modal fade" id="createUserModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Create User</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-md-6"><label class="form-label">First Name*</label><input type="text" class="form-control form-control-sm" id="cuFirstName" required /></div>
                    <div class="col-md-6"><label class="form-label">Last Name*</label><input type="text" class="form-control form-control-sm" id="cuLastName" required /></div>
                    <div class="col-md-6"><label class="form-label">Email*</label><input type="email" class="form-control form-control-sm" id="cuEmail" required /></div>
                    <div class="col-md-6"><label class="form-label">Password*</label><input type="password" class="form-control form-control-sm" id="cuPassword" required /></div>
                    <div class="col-md-6"><label class="form-label">Department</label><select class="form-select form-select-sm" id="cuDepartment"><option value="">Select...</option></select></div>
                    <div class="col-md-6"><label class="form-label">Position</label><select class="form-select form-select-sm" id="cuPosition"><option value="">Select...</option></select></div>
                    <div class="col-md-6"><label class="form-label">Role</label><select class="form-select form-select-sm" id="cuRole"><option value="3">User</option><option value="1">Administrator</option></select></div>
                    <div class="col-md-6"><label class="form-label">Work Phone</label><input type="tel" class="form-control form-control-sm" id="cuPhone" /></div>
                    <div class="col-md-6"><label class="form-label">Date of Birth</label><input type="date" class="form-control form-control-sm" id="cuDateOfBirth" /></div>
                    <div class="col-md-6"><label class="form-label">Hiring Date</label><input type="date" class="form-control form-control-sm" id="cuHiringDate" /></div>
                    <div class="col-12"><label class="form-label">About Me</label><textarea class="form-control form-control-sm" id="cuAboutMe" rows="2" placeholder="Brief description..."></textarea></div>
                </div>
                <div id="cuError" class="text-danger small mt-2"></div>
                <div id="cuSuccess" class="text-success small mt-2"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary btn-sm" id="cuSubmit">Create User</button>
            </div>
        </div>
    </div>
</div>

<!-- Create Department Modal -->
<div class="modal fade" id="createDeptModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Create Department</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <div class="mb-3"><label class="form-label">Department Name*</label><input type="text" class="form-control form-control-sm" id="cdName" required /></div>
                <div class="mb-3"><label class="form-label">Parent Department</label><select class="form-select form-select-sm" id="cdParent"><option value="">None (Top Level)</option></select></div>
                <div id="cdError" class="text-danger small"></div>
                <div id="cdSuccess" class="text-success small"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary btn-sm" id="cdSubmit">Create</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin/organization.js" asp-append-version="true"></script>
}