<MudThemeProvider @ref="@_mudThemeProvider"
                  IsDarkMode="@_isDarkMode"
                  IsDarkModeChanged="@(x => _isDarkMode = x)" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <div class="unauthorized-container">
                            <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex flex-column align-center justify-center"
                                          Style="height: 100vh;">
                                <MudIcon Icon="@Icons.Material.Filled.Lock" Size="Size.Large" Color="Color.Error" Style="font-size: 100px;" />
                                <MudText Typo="Typo.h4" Class="mt-4">Access Denied</MudText>
                                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/" Class="mt-4">
                                    Go to Dashboard
                                </MudButton>
                            </MudContainer>
                        </div>
                    }
                </NotAuthorized>
                <Authorizing>
                    <div class="loading-container">
                        <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex flex-column align-center justify-center" Style="height: 100vh;">
                            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true">
                                <MudText Typo="Typo.h6" Class="mt-4">Loading...</MudText>
                            </MudProgressCircular>
                        </MudContainer>
                    </div>
                </Authorizing>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="not-found-container">
                    <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex flex-column align-center justify-center" Style="height: 100vh;">
                        <MudIcon Icon="@Icons.Material.Filled.SearchOff" Size="Size.Large" Color="Color.Warning" Style="font-size: 100px;" />
                        <MudText Typo="Typo.h4" Class="mt-2">The page you're looking for doesn't exist.</MudText>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/" Class="mt-4">
                            Go to Dashboard
                        </MudButton>
                    </MudContainer>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    private MudThemeProvider? _mudThemeProvider;
    private bool _isDarkMode = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && _mudThemeProvider != null)
        {
            _isDarkMode = await _mudThemeProvider.GetSystemDarkModeAsync();
            StateHasChanged();
        }
    }
}