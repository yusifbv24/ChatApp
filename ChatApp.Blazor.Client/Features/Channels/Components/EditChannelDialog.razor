@inject IChannelService ChannelService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" Model="@_request" Validation="@(new DataAnnotationsValidator())">
            <MudTextField @bind-Value="_request.Name"
                          Label="Channel Name"
                          Required="true"
                          RequiredError="Channel name is required"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense"
                          Class="mb-4" />

            <MudTextField @bind-Value="_request.Description"
                          Label="Description"
                          Lines="3"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense"
                          Class="mb-4" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton OnClick="Update"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Disabled="@_isUpdating">
            @if (_isUpdating)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
            }
            else
            {
                <span>Update Channel</span>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public ChannelDetailsDto Channel { get; set; } = null!;

    private MudForm _form = null!;
    private UpdateChannelRequest _request = new();
    private bool _isUpdating = false;

    protected override void OnInitialized()
    {
        _request.Name = Channel.Name;
        _request.Description = Channel.Description;
    }

    private async Task Update()
    {
        await _form.Validate();
        if (!_form.IsValid) return;

        _isUpdating = true;

        var result = await ChannelService.UpdateChannelAsync(Channel.Id, _request);

        _isUpdating = false;

        if (result.IsSuccess)
        {
            Snackbar.Add("Channel updated successfully!", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            Snackbar.Add(result.Error ?? "Failed to update channel", Severity.Error);
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
