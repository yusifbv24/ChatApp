@inject IChannelService ChannelService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" Model="@_request" Validation="@(new DataAnnotationsValidator())">
            <MudTextField @bind-Value="_request.Name"
                          Label="Channel Name"
                          Required="true"
                          RequiredError="Channel name is required"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense"
                          Class="mb-4" />

            <MudTextField @bind-Value="_request.Description"
                          Label="Description"
                          Lines="3"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense"
                          Class="mb-4" />

            <MudSelect @bind-Value="_request.Type"
                       Label="Channel Type"
                       Variant="Variant.Outlined"
                       Margin="Margin.Dense"
                       Class="mb-4">
                <MudSelectItem Value="@ChannelType.Public">
                    <div class="d-flex align-items-center">
                        <MudIcon Icon="@Icons.Material.Filled.Public" Size="Size.Small" Class="mr-2" />
                        <span>Public - Anyone can join</span>
                    </div>
                </MudSelectItem>
                <MudSelectItem Value="@ChannelType.Private">
                    <div class="d-flex align-items-center">
                        <MudIcon Icon="@Icons.Material.Filled.Lock" Size="Size.Small" Class="mr-2" />
                        <span>Private - Invite only</span>
                    </div>
                </MudSelectItem>
            </MudSelect>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancel</MudButton>
        <MudButton OnClick="Create"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Disabled="@_isCreating">
            @if (_isCreating)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
            }
            else
            {
                <span>Create Channel</span>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;

    private MudForm _form = null!;
    private CreateChannelRequest _request = new() { Type = ChannelType.Public };
    private bool _isCreating = false;

    private async Task Create()
    {
        await _form.Validate();
        if (!_form.IsValid) return;

        _isCreating = true;

        var result = await ChannelService.CreateChannelAsync(_request);

        _isCreating = false;

        if (result.IsSuccess)
        {
            Snackbar.Add($"Channel '{_request.Name}' created successfully!", Severity.Success);
            MudDialog.Close(DialogResult.Ok(result.Data));
        }
        else
        {
            Snackbar.Add(result.Error ?? "Failed to create channel", Severity.Error);
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
