    private void CloseEditDialog() => showEditDialog = false;

    private async Task OnEditAvatarSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file == null) return;

        if (!file.ContentType.StartsWith("image/"))
        {
            editMessage = "Only image files are allowed";
            return;
        }

        if (file.Size > 10 * 1024 * 1024)
        {
            editMessage = "File size must be less than 10 MB";
            return;
        }

        try
        {
            using var stream = file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
            var buffer = new byte[file.Size];
            await stream.ReadExactlyAsync(buffer, 0, buffer.Length);

            editAvatarFileData = buffer;
            editAvatarFileName = file.Name;
            editAvatarContentType = file.ContentType;
            editAvatarFileSize = file.Size;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            editMessage = $"Error reading file: {ex.Message}";
        }
    }

