    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len /= 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private async Task HandleEditUser()
    {
        isSaving = true;
        editMessage = null;
        StateHasChanged();

        try
        {
            // Upload avatar if selected
            if (editAvatarFileData != null && !string.IsNullOrEmpty(editAvatarFileName) && !string.IsNullOrEmpty(editAvatarContentType))
            {
                var uploadResult = await FileService.UploadProfilePictureAsync(
                    editAvatarFileData, editAvatarFileName, editAvatarContentType, UserId);

                if (uploadResult.IsSuccess && uploadResult.Value != null)
                {
                    editModel.AvatarUrl = uploadResult.Value.ThumbnailUrl ?? uploadResult.Value.DownloadUrl;
                }
                else
                {
                    editSuccess = false;
                    editMessage = uploadResult.Error ?? "Failed to upload avatar.";
                    isSaving = false;
                    return;
                }
            }

            var result = await UserService.UpdateUserAsync(UserId, editModel);
            if (!result.IsSuccess)
            {
                editSuccess = false;
                editMessage = result.Error ?? "Failed to update user.";
                isSaving = false;
                StateHasChanged();
                return;
            }

            // Handle department change
            if (Guid.TryParse(selectedDepartmentId, out var deptId) && deptId != Guid.Empty)
            {
                if (user!.DepartmentId != deptId)
                    await UserService.AssignToDepartmentAsync(UserId, deptId);
            }
            else if (user!.DepartmentId.HasValue)
            {
                await UserService.RemoveFromDepartmentAsync(UserId);
            }

            // Handle supervisor change
            if (Guid.TryParse(selectedSupervisorId, out var supId) && supId != Guid.Empty)
            {
                if (user.SupervisorId != supId)
                    await UserService.AssignSupervisorAsync(UserId, supId);
            }
            else if (user.SupervisorId.HasValue)
            {
                await UserService.RemoveSupervisorAsync(UserId);
            }

            editSuccess = true;
            editMessage = "User updated successfully.";
            await LoadUserAsync();
            StateHasChanged();
            await Task.Delay(1000);
            CloseEditDialog();
        }
        catch (Exception ex)
        {
            editSuccess = false;
            editMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

