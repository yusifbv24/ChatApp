<div class="search-panel">
    <div class="search-panel-header">
        <button class="search-panel-close" @onclick="() => OnClose.InvokeAsync()">
            <MudIcon Icon="@Icons.Material.Filled.ArrowBack" Size="Size.Small" />
        </button>
        <div class="search-input-container">
            <MudIcon Icon="@Icons.Material.Filled.Search" Size="Size.Small" Class="search-input-icon" />
            <input type="text"
                   class="search-input"
                   placeholder="Search..."
                   @bind="searchQuery"
                   @bind:event="oninput"
                   @onkeyup="HandleSearchInput" />
            @if (!string.IsNullOrEmpty(searchQuery))
            {
                <button class="search-clear-btn" @onclick="ClearSearch">
                    <MudIcon Icon="@Icons.Material.Filled.Close" Size="Size.Small" />
                </button>
            }
        </div>
    </div>

    <div class="search-results-container">
        @if (isSearching)
        {
            <div class="search-loading">
                <div class="loading-spinner small"></div>
                <span>Searching...</span>
            </div>
        }
        else if (searchResults?.Results?.Any() == true)
        {
            <div class="search-results-list">
                @foreach (var group in GroupedResults)
                {
                    <div class="search-date-divider">
                        <span>@FormatDate(group.Key)</span>
                    </div>
                    @foreach (var result in group)
                    {
                        <div class="search-result-item" @onclick="() => NavigateToMessage(result.MessageId)">
                            <div class="search-result-avatar">
                                @if (!string.IsNullOrEmpty(result.SenderAvatarUrl))
                                {
                                    <img src="@result.SenderAvatarUrl" alt="@result.SenderFullName" />
                                }
                                else
                                {
                                    <div class="avatar-placeholder">@StringHelper.GetInitials(result.SenderFullName)</div>
                                }
                            </div>
                            <div class="search-result-content">
                                <span class="search-result-sender">@result.SenderFullName</span>
                                <div class="search-result-text">@((MarkupString)result.HighlightedContent)</div>
                            </div>
                        </div>
                    }
                }
            </div>
        }
        else if (!string.IsNullOrEmpty(searchQuery) && searchQuery.Length >= 3 && !isSearching)
        {
            <div class="search-no-results">
                <MudIcon Icon="@Icons.Material.Outlined.SearchOff" Size="Size.Large" />
                <span>No messages found</span>
            </div>
        }
        else if (string.IsNullOrEmpty(searchQuery) || searchQuery.Length < 3)
        {
            <div class="search-hint">
                <MudIcon Icon="@Icons.Material.Outlined.Search" Size="Size.Large" />
                <span>Enter at least 3 characters to search</span>
            </div>
        }
    </div>
</div>
